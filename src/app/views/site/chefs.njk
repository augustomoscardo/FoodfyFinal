{% set pageName = "chefs" %}
{% extends "site/layout.njk" %}

{% block head %}
  <title>Foodfy - Chefs</title>
{% endblock %}

  {% block content %}
    {% if chefs %}
    <div class="container">
      <div class="chefs">
        {% for chef in chefs %}
          <div class="chef" id="{{chef.id}}">
            <div class="chef_avatar">
              <img src="{{chef.image}}" alt="Imagem de {{chef.name}}">
            </div>
            <div class="chef_content">
              <div class="chef_name">
                <p>{{chef.name}}</p>
              </div>
              <div class="chef-total_recipes">
                {% if chef.total_recipes == 0 %}
                  <p>Não há receitas</p>
                {% elseif chef.total_recipes == 1 %}
                  <p>{{chef.total_recipes}} receita</p>
                {% else %}
                  <p>{{chef.total_recipes}} receitas</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="pagination"
      data-page={{pagination.page}}
      data-total={{pagination.total}}
      data-filter={{filter}}
    ></div>

    <script src="/js/paginate.js"></script>
    {% else %}
      <h2>Não há chefs cadastrados no momento.</h2>
    {% endif %}
  {% endblock content %}


